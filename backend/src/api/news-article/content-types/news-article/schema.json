{
  "kind": "collectionType",
  "collectionName": "news_articles",
  "info": {
    "singularName": "news-article",
    "pluralName": "news-articles",
    "displayName": "NewsArticle"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Headline": {
      "type": "string"
    },
    "SubHeadline": {
      "type": "string"
    },
    "TeaserText": {
      "type": "text"
    },
    "Image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "Author": {
      "type": "string"
    },
    "VisibleFrom": {
      "type": "datetime"
    },
    "VisibleTo": {
      "type": "datetime"
    },
    "DateOfPublication": {
      "type": "date"
    },
    "FeaturedArticle": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "Slug": {
      "type": "string"
    },
    "SEO": {
      "type": "component",
      "component": "seo.seo",
      "repeatable": false
    },
    "NewsBody": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      }
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::news-article-category.news-article-category",
      "inversedBy": "news_articles"
    }
  }
}
