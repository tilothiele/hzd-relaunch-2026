{
  "kind": "collectionType",
  "collectionName": "news_article_categories",
  "info": {
    "singularName": "news-article-category",
    "pluralName": "news-article-categories",
    "displayName": "NewsArticleCategory"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "CategoryName": {
      "type": "string"
    },
    "Slug": {
      "type": "string",
      "required": true,
      "unique": true,
      "regex": "^\\/.*"
    },
    "CategoryTeaserText": {
      "type": "text"
    },
    "FeatureTitle": {
      "type": "string"
    },
    "news_articles": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::news-article.news-article",
      "mappedBy": "category"
    },
    "CategoryDescription": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      }
    },
    "ContentSections": {
      "type": "dynamiczone",
      "components": [
        "blocks.simple-hero-section",
        "blocks.text-columns-section"
      ]
    }
  }
}
